        // if all the Taiidan ships are dead, the "DestroyFleet" objective is met
        IF (VarGet ("G_Nis7Complete") = TRUE)
                IFONCE ( (ShipsCount (TEAMSHIPS_Cruiser) = 0) AND
                         (ShipsCount (TEAMSHIPS_Destroyers) = 0) AND
