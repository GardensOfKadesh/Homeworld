
CFLAGS = -c -Wall -g -O2 -D_X86_64 -DHW_GAME_HOMEWORLD \
	-DHW_BUILD_FOR_DISTRIBUTION -I. -I../../src/SDL -I../../src/Game \
	-I../../src/ThirdParty/CRC `sdl2-config --cflags` -mconsole
LDFLAGS = -O2 file.o -lmingw32 -lSDL2main -lSDL2 `sdl2-config --libs` -mconsole
BIN_CONV = bank font geo lif ll mad nis
OBJECTS_CONV= file.o bank.o font.o geo.o lif.o ll.o mad.o nis.o 

all: $(OBJECTS_CONV) $(BIN_CONV)

clean:
	rm -f *.o $(OBJECTS_CONV)

